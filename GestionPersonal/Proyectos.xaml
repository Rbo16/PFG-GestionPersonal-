<Window x:Class="GestionPersonal.Proyectos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionPersonal"
        mc:Ignorable="d"
        Title="Proyectos" Height="720" Width="1280"
        FontFamily="Cambria"  WindowStartupLocation="CenterScreen"
        FontSize="20" ResizeMode="CanMinimize">
    <Grid Background="#FF949494">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="280"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBlock Text="PROYECTOS" FontWeight="Bold" FontSize="40" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4"
                   HorizontalAlignment="Center" />
        <Button x:Name="btnMenu" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="40" Height="40">
            <Image Source="Imagenes/Home.png" Width="40"/>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <StackPanel Width="250" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="0,20,10,0">
            <TextBlock Text="Nombre" FontWeight="Bold" Margin="0,5,0,5"/>
            <TextBox x:Name="txbNombreP"  />
            <TextBlock Text="Cliente" FontWeight="Bold" Margin="0,5,0,5"/>
            <TextBox x:Name="txbCliente" />
            <Grid>
                <StackPanel Width="125" HorizontalAlignment="Left">
                    <TextBlock Text="Fecha Inicio" FontWeight="Bold" Margin="0,5,10,5"/>
                    <TextBox x:Name="txbFechaInic" Margin="0,0,10,0"/>
                    <TextBlock Text="Tiempo" FontWeight="Bold" Margin="0,5,10,5"/>
                    <TextBox x:Name="txbTiempo" Margin="0,0,10,0"/>
                </StackPanel>
                <StackPanel Width="125" HorizontalAlignment="Right">
                    <TextBlock Text="Fecha Fin" FontWeight="Bold" Margin="0,5,10,5"/>
                    <TextBox x:Name="txbFechaFin" />
                    <TextBlock Text="Presupesto" FontWeight="Bold" Margin="0,5,10,5"/>
                    <TextBox x:Name="txbpresupuesto" />
                </StackPanel>
            </Grid>
            <TextBlock Text="Prioridad" FontWeight="Bold" Margin="0,5,0,5"/>
            <ComboBox x:Name="cmbPrioridad" />
            <TextBlock Text="Descripción" FontWeight="Bold" Margin="0,5,0,5"/>
            <TextBox x:Name="txbDescripcionP" Height="40" FontSize="16" FontWeight="Normal" TextWrapping="Wrap"
                     MaxLength="50"/>
        </StackPanel>
        <Button Name="btnCrear" Grid.Column="1" Grid.Row="4" Width="65"
                Height="65" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <StackPanel>
                <Image Source="/Imagenes/Agregar.png" Height="40"/>
                <TextBlock Text="Crear" FontWeight="Bold" FontSize="15"/>
            </StackPanel>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnGuardar" Grid.Column="1" Grid.Row="4" Width="65"
                Height="65" HorizontalAlignment="Center" Margin="0,0,10,0" VerticalAlignment="Bottom">
            <StackPanel>
                <Image Source="/Imagenes/Guardar.png" Height="40"/>
                <TextBlock Text="Guardar" FontWeight="Bold" FontSize="15"/>
            </StackPanel>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnBorrar" Grid.Column="1" Grid.Row="4" Width="65"
                Height="65" HorizontalAlignment="Right" Margin="0,0,10,0"
                VerticalAlignment="Bottom">
            <StackPanel>
                <Image Source="/Imagenes/Eliminar.png" Height="40"/>
                <TextBlock Text="Eliminar" FontWeight="Bold" FontSize="15"/>
            </StackPanel>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBlock Text="Listado de proyectos" FontWeight="Bold" Grid.Column="2" Grid.Row="2" Margin="10,0,0,5"
                   VerticalAlignment="Bottom"/>
        <DataGrid x:Name="dtgPro" Width="415" Grid.Column="2" Grid.Row="3" Grid.RowSpan="2" Margin="10,0,0,0"/>
        <Button Name="btnFiltrarPro" Grid.Column="2" Grid.Row="2" Width="35" Height="35" 
                 Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image Source="/Imagenes/Filtro.png" Width="20"/>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBlock Text="Participantes" FontWeight="Bold" Grid.Column="3" Grid.Row="2" Margin="20,0,0,5"
                   VerticalAlignment="Bottom"/>
        <DataGrid x:Name="dtgEmpleadosPro" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Column="3" Grid.Row="3"
                  VerticalAlignment="Top" Height="440" Margin="20,0,0,0"/>
        <Button Name="btnFiltrarEPro" Grid.Column="4" Grid.Row="2" Width="35" Height="35" 
                 Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image Source="/Imagenes/Filtro.png" Width="20"/>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <StackPanel Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Margin="20,120,0,0">
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
            <Button x:Name="btnAddE" FontWeight="Bold" Content="Añadir nuevo participante" />
            <Button x:Name="btnEliminarE" FontWeight="Bold" Content="Eliminar participante" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
