<Window x:Class="GestionPersonal.Vistas.Recuperacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionPersonal.Vistas"
        mc:Ignorable="d"
        Title="Recuperar contraseña" Height="170" Width="300" FontSize="20" FontFamily="Cambria" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF949494">
        <StackPanel Margin="10">
            <Label Content="Correo Electrónico"/>
            <TextBox Name="txbCorreo" Margin="0,5,5,5" FontSize="18"/>
            <Button Name="btnConfirmar" Content="Confirmar" Width="100" HorizontalAlignment="Right" Margin="5" Click="btnConfirmar_Click"/>
        </StackPanel>
    </Grid>
</Window>
